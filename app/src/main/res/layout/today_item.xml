<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <TextView
        android:id="@+id/present_weather_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="시간"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/present_weather_icon"
        app:layout_constraintRight_toRightOf="@id/present_weather_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/present_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/present_weather_text1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온도"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/present_weather_icon"
        app:layout_constraintRight_toRightOf="@id/present_weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/present_weather_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>