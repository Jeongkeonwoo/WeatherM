<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background">


    <TextView
        android:id="@+id/daytime_weather_weekly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요일"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daytime_weather_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="날짜"
        android:textColor="#ffff"
        app:layout_constraintLeft_toRightOf="@id/daytime_weather_weekly"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/daytime_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@id/daytime_weather_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daytime_weather_hightemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="최고온도"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/daytime_weather_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/daytime_weather_lowtemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="최저온도"
        android:textColor="#ffff"
        app:layout_constraintLeft_toRightOf="@id/daytime_weather_hightemperature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>